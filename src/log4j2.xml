<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name ="Console" target ="SYSTEM_OUT">
            
            <PatternLayout pattern="%d{HH:mm:ss}%5p [%t] %l %m%n"/>
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> -->
        </Console>
	    <RollingFile name = "logfile" fileName ="logfile.log" filePattern= "logfile.%i.log">
	          <PatternLayout pattern="%d %5p %C{2} [%t] %l %m%n "/>
	          <Policies>
	            <!-- size unit:Byte(default),KB,MB,GB -->
	            <SizeBasedTriggeringPolicy size = "500000000"/>
	          </Policies>
	          <DefaultRolloverStrategy max="3" fileIndex="min" />
	    </RollingFile>
    </Appenders>
    <Loggers>
        <!-- ALL>TRACE>DEBUG>INFO>WARN>ERROR>FATAL>OFF -->
        <Root level="ALL">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="logfile" />
        </Root>
    </Loggers>
</Configuration>

